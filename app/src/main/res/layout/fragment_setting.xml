<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.hjq.bar.TitleBar
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="@string/tab4"
        app:backButton="false"/>
    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/tv_title"
        android:background="@color/colorTitle"
        android:gravity="center"
        android:text="@string/setting_icon"
        android:textColor="@color/colorText"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp" />
    <com.maiml.library.BaseItemLayout
        android:layout_below="@+id/tv_icon"
        android:id="@+id/setting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_size  = "18"
        app:text_color = "@color/colorText"
        app:icon_margin_left = "10"
        app:icon_text_margin = "10"
        app:margin_right = "10"
        app:item_height = "50"
        app:line_color = "@color/tab_disable"
        app:right_text_margin = "10" />
    <Button
        android:id="@+id/btn_quit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="退出"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />
</RelativeLayout>